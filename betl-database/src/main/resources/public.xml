<?xml version="1.0"?>
<?xml-stylesheet type="text/xsl" href="configuration.xsl"?>
<configuration>
	
	<!-- hdfs -->
	<property>
		<name>mapreduce.job.queuename</name>
		<value>default</value>
	</property>
	<property>
		<name>fs.defaultFS</name>
		<value>hdfs://10.111.32.202:8020</value>
	</property>

	<!-- database -->
	<property>
		<name>betl.database.name</name>
		<value>mysql</value>
	</property>
	
	<property>
		<name>database.jdbc.driverClass</name>
		<value>com.mysql.jdbc.Driver</value>
	</property>
	
	<property>
		<name>database.jdbc.url</name>
		<value>jdbc:mysql://localhost:3306/spiderdb?characterEncoding=UTF-8</value>
	</property>
	
	<property>
		<name>database.jdbc.schema</name>
		<value>spiderdb</value>
	</property>
	<property>
		<name>database.jdbc.username</name>
		<value>root</value>
	</property>
	
	<property>
		<name>database.jdbc.password</name>
		<value>root</value>
	</property>
	
</configuration>